// typeScript에 어떻게 javascript로 변환하는지 알려주면서 몇몇 옵션 설정

{
"compilerOptions": {
    "module": "commonjs", //  node.js를 평범하게 사용하고 다양한 걸 import하거나 export 할 수 있게 만듬 
    "target": "ES2015", //javascript 컴파일 버전 
    "sourceMap": true,  // sourceMap 처리 
    "outDir": "dist"
},
"include" :["src/**/*"],  // 컴파일과정에서 포함할 파일의 배열 
"exclude": ["node_modules"] // 디폴트로 node modules를 제외 ::  어떤경우에는 어떤 node modules도 설치하지 않기때문에 
}